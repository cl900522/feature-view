<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:scpan="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context">

    <alias name="child" alias="human-child" />

    <bean name="parent" class="acme.me.spring.Human" abstract="true">
        <property name="relatives">
            <list>
                <value>GrandPa</value>
                <value>GrandMa</value>
            </list>
        </property>
    </bean>

    <bean name="child" class="acme.me.spring.Human" parent="parent" scope="prototype">
        <property name="relatives">
            <list merge="true">
                <value>Father</value>
                <value>Mother</value>
            </list>
        </property>
    </bean>

    <bean name="childOnly" class="acme.me.spring.Human" parent="parent">
        <property name="relatives">
            <list merge="true">
                <value>Father</value>
                <value>Mother</value>
            </list>
        </property>
    </bean>

    <bean id="spelUtil" class="acme.me.spring.SpelUtil"/>

    <!-- 会自动扫描com.mc.bsframe下的所有包，包括子包下除了@Controller的类。 -->
    <scpan:component-scan base-package="acme.me.spring.auto">
        <scpan:exclude-filter type="annotation" expression="org.springframework.stereotype.Controller" />
        <scpan:exclude-filter type="annotation" expression="org.springframework.web.bind.annotation.ControllerAdvice" />
    </scpan:component-scan>
</beans>