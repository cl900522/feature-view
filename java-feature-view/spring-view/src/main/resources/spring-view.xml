<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <alias name="child" alias="human-child" />

    <bean name="parent" class="acme.me.spring.Human" abstract="true">
        <property name="relatives">
            <list>
                <value>GrandPa</value>
                <value>GrandMa</value>
            </list>
        </property>
    </bean>

    <bean name="child" class="acme.me.spring.Human" parent="parent">
        <property name="relatives">
            <list merge="true">
                <value>Father</value>
                <value>Mother</value>
            </list>
        </property>
    </bean>

    <bean id="spelUtil" class="acme.me.spring.SpelUtil"/>

</beans>