<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN"
"http://www.ibatis.com/dtd/sql-map-2.dtd">
<sqlMap namespace="acme.me.orm.bean.Account">
    <typeAlias alias="account" type="acme.me.orm.bean.Account" />
    <select id="getAccount" parameterClass="java.lang.String" resultClass="account">
        <![CDATA[
           select id, name, sex from account where name = #name#
        ]]>
    </select>
    <update id="updateAccount" parameterClass="account">
        <![CDATA[
            UPDATE account SET name=#name#, sex=#sex# WHERE id = #id#
        ]]>
    </update>
    <insert id="insertAccount" parameterClass="account">
        <![CDATA[
            INSERT INTO account (name, sex) VALUES (#name#, #sex#)
        ]]>
    </insert>
    <delete id="deleteAccount" parameterClass="java.lang.String">
        delete from t_user where id = #value#
    </delete>
</sqlMap>