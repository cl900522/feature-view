<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <item name="android:background">@color/clean</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="IndexNavigation">
        <item name="android:background">@drawable/selector_navigation_bar</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">2dip</item>
    </style>

    <style name="IndexNavigation.SelfCheck" parent="IndexNavigation">
        <item name="android:drawableTop">@drawable/selector_navigation_selfcheck</item>
    </style>

    <style name="IndexNavigation.Depart" parent="IndexNavigation">
        <item name="android:drawableTop">@drawable/selector_navigation_depart</item>
    </style>

    <style name="IndexNavigation.Favourite" parent="IndexNavigation">
        <item name="android:drawableTop">@drawable/selector_navigation_favourite</item>
    </style>

    <style name="IndexNavigation.Help" parent="IndexNavigation">
        <item name="android:drawableTop">@drawable/selector_navigation_help</item>
    </style>

    <style name="SelfCheckSearchNav">
        <item name="android:background">@drawable/theme_rectangle</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:padding">8dip</item>
        <item name="android:layout_height">50dip</item>
    </style>

    <style name="SelfCheckSearchNav_Button">
        <item name="android:background">@drawable/indexsearch</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12dip</item>
        <item name="android:textColor">@color/search_text_color</item>
        <item name="android:drawableLeft">@drawable/search</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:paddingRight">20dip</item>
        <item name="android:layout_height">34dip</item>
    </style>

    <style name="SearchKeyword">
        <item name="android:background">@drawable/indexsearch</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12dip</item>
    </style>

    <style name="SearchCancel">
        <item name="android:background">@color/theme_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">14dip</item>
        <item name="android:textColor">@color/clean</item>
        <item name="android:text">@string/app_cancel</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Header">
        <item name="android:background">@color/theme_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">45dip</item>
    </style>

    <style name="Header.Button" parent="Header">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/selector_theme_button</item>
        <item name="android:textColor">@color/clean</item>
        <item name="android:minWidth">50dip</item>
        <item name="android:layout_height">30dip</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Header.Title" parent="Header">
        <item name="android:layout_height">34dip</item>
        <item name="android:textSize">20dip</item>
        <item name="android:textColor">@color/clean</item>
    </style>

    <style name="FormRow">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">30dip</item>
        <item name="android:background">@color/clean</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="FormRow.LeftItem" parent="FormRow">
        <item name="android:background">@color/clean</item>
        <item name="android:textSize">14dip</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1.5</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FormRow.RightItem" parent="FormRow">
        <item name="android:textSize">12dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="DirectLink">
        <item name="android:layout_height">40dip</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/clickable_item</item>
    </style>

    <style name="DirectLink.Text" parent="DirectLink">
        <item name="android:textSize">16dip</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">0dip</item>
    </style>

    <style name="DirectLink.Image" parent="DirectLink">
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:scaleType">fitEnd</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="DirectLink.Button" parent="DirectLink">
        <item name="android:gravity">center</item>
        <item name="android:background">@color/theme_subcolor</item>
        <item name="android:textColor">@color/clean</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:layout_height">30dip</item>
        <item name="android:visibility">gone</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MulityLink">
        <item name="android:background">@drawable/clickable_item</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="MulityLink.Text" parent="MulityLink">
        <item name="android:textSize">16dip</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">0dip</item>
    </style>

    <style name="MulityLink.CheckBox" parent="MulityLink">
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:scaleType">fitEnd</item>
        <!-- <item name="android:button">@null</item> -->
    </style>

    <style name="ExpandableGroup">
        <item name="android:background">@color/theme_gray</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">30dip</item>
    </style>

    <style name="ExpandableGroup.Text" parent="ExpandableGroup">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">0dip</item>
        <item name="android:textSize">16dip</item>
    </style>

    <style name="ExpandableGroup.Indicator" parent="ExpandableGroup">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">20dip</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="ConsultTableLayout">
        <item name="android:layout_marginTop">20dip</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
    </style>

    <style name="ConsultTableRow">
        <item name="android:background">@drawable/selector_consult_button</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:layout_marginBottom">-1dip</item>
    </style>

    <style name="ConsultTableRowLayout">
        <item name="android:background">@drawable/selector_consult_button</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">45dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
    </style>

    <style name="ConsultTableText">
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:textSize">15dip</item>
    </style>

    <style name="PageoperateButton">
        <item name="android:background">@drawable/selector_theme_button</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_height">35dip</item>
        <item name="android:textSize">18dip</item>
        <item name="android:textColor">@color/clean</item>
        <item name="android:layout_margin">5dip</item>
    </style>

    <style name="SubjectSubmitField">
        <item name="android:paddingLeft">5dip</item>
        <item name="android:background">@color/clean</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:textSize">18dip</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubjectSubmitContent">
        <item name="android:layout_height">200dip</item>
        <item name="android:gravity">top</item>
        <item name="android:singleLine">false</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:background">@drawable/selector_submitcontent</item>
        <item name="android:textSize">16dip</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <style name="ChatMessage">
        <item name="android:background">@drawable/indexsearch</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">12dip</item>
        <item name="android:paddingLeft">10dip</item>
    </style>

    <style name="ChatSend">
        <item name="android:background">@drawable/selector_chatsend_button</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">14dip</item>
        <item name="android:textColor">@color/clean</item>
        <item name="android:text">@string/app_cancel</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubjectItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/clickable_item</item>
    </style>

    <style name="SubjectItem.Date">
        <item name="android:textSize">12dip</item>
        <item name="android:layout_height">30dip</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/deep_gray</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">0dip</item>
    </style>

    <style name="SubjectItem.Content">
        <item name="android:textSize">20dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">0dip</item>
    </style>

    <style name="ChatItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/clickable_item</item>
    </style>

    <style name="ChatItem.Date">
        <item name="android:textSize">14dip</item>
        <item name="android:layout_height">30dip</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">0dip</item>
    </style>

    <style name="ChatItem.Content">
        <item name="android:textSize">20dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">0dip</item>
    </style>

</resources>