<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_directlink"
    style="@style/DirectLink"
    android:layout_width="match_parent">

    <TextView
        android:id="@+id/layout_directlink_textview"
        style="@style/DirectLink.Text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Value" />

    <ImageView
        android:id="@+id/layout_directlink_imageview"
        style="@style/DirectLink.Image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:visibility="visible" />

    <Button
        android:id="@+id/layout_directlink_button"
        style="@style/DirectLink.Button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toLeftOf="@+id/layout_directlink_imageview"
        android:focusable="false"
        android:text="@string/app_delete" />

</RelativeLayout>